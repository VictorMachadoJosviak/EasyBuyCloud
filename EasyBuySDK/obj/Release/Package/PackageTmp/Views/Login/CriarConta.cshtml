@model EasyBuySDK.Models.Usuario
@{
    ViewBag.Title = "CriarConta";
}



<div class="form-group" style="margin-left:35%;width:25%">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h1>Criar uma conta</h1>

        <h4>Preencha seus dados:</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <label>Nome</label>
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })

            <br />

            <label>Email</label>
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

            <br />


            <label>Senha</label>
            @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })

            <br>

            <label>Confirmar senha</label>
            @Html.EditorFor(model => model.ConfirmaSenha, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
            @Html.ValidationMessageFor(model => model.ConfirmaSenha, "", new { @class = "text-danger" })

            <br>

            <input type="submit" value="Aceitar os termos e cadastrar" class="btn btn-primary" style="width:100%" />
            <br><br>
            <a class="btn btn-default" href="@Url.Action("Login","Login")" style="width:100%">Entrar</a>

    }

</div>