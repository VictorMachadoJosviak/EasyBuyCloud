@model EasyBuySDK.Models.Usuario
@{
    ViewBag.Title = "Login";
}

<div class="form-group" style="margin-left:35%;width:25%">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h2>Login</h2>
        <hr />

        <label>Email</label>
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

            <br />

            <label>Senha</label>
            @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })

            <br />

            @Html.CheckBox("permanecerLogado") <label style="margin-left:10px">Permanecer Logado</label>
            <br /><br />

            <input type="submit" value="Login" class="btn btn-primary" style="width:100%" /><br><br>
            <a href="@Url.Action("CriarConta","Login")" style="width:100%" class="btn btn-default">Ciar Conta</a>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    }
</div>