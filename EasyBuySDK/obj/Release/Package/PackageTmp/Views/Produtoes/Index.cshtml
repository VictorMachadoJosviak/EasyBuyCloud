<table class="table">
    <tr>
        <th>Imagem</th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria.Tipo)
        </th>
        <th>
            Estabelecimento
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Disponivel)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                <img src="~/Images/@item.CaminhoImagem" style="width:50px;height:50px" />
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estabelecimento.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disponivel)
            </td>
            <td>

                <a class="btn btn-warning" href="@Url.Action("Edit", "Produtoes",new { id = item.Id })">
                    <h5 class="glyphicon glyphicon-pencil"></h5>
                </a>   |
                <a class="btn btn-primary" href="@Url.Action("Details", "Produtoes",new { id = item.Id })">
                    <h5 class="glyphicon glyphicon-file"></h5>
                </a> |
                <a class="btn btn-danger" href="@Url.Action("Delete", "Produtoes",new { id = item.Id })">
                    <h5 class="glyphicon glyphicon-trash"></h5>
                </a>
            </td>
        </tr>
    }
</table>